<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/arrowback"
            style="@style/ArrowBackImageButtonActivityMain" />

        <TextView
            style="@style/TextStyleTitleActivity"
            android:text="@string/settings" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_four_dp"
        android:layout_marginTop="@dimen/twenty_four_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:fontFamily="@font/ys_display_regular"
            android:gravity="center"
            android:text="@string/dark_theme"
            android:textColor="@color/day_black_night_white"
            android:textFontWeight="400"
            android:textSize="@dimen/sixteen_sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/themeSwitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/sixteen_dp"
            app:thumbTint="@color/color_switch"
            app:trackTint="@color/color_switch_track" />
    </FrameLayout>

    <TextView
        android:id="@+id/share"
        style="@style/TextStyleActivitySettingsWithIcon"
        android:drawableEnd="@drawable/ic_share"
        android:text="@string/share" />

    <TextView
        android:id="@+id/support"
        style="@style/TextStyleActivitySettingsWithIcon"
        android:drawableEnd="@drawable/ic_support"
        android:text="@string/support" />

    <TextView
        android:id="@+id/agreement"
        style="@style/TextStyleActivitySettingsWithIcon"
        android:drawableEnd="@drawable/ic_arrowforward"
        android:text="@string/agreement" />
</LinearLayout>
