<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/arrowback"
            style="@style/ArrowBackImageButtonActivityMain" />

        <TextView
            style="@style/TextStyleTitleActivity"
            android:text="@string/settings" />
    </LinearLayout>

    <Switch
        style="@style/TextStyleActivitySettingsWithIcon"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:text="@string/dark_theme" />

    <TextView
        android:id="@+id/share"
        style="@style/TextStyleActivitySettingsWithIcon"
        android:drawableEnd="@drawable/ic_share"
        android:text="@string/share" />

    <TextView
        android:id="@+id/support"
        style="@style/TextStyleActivitySettingsWithIcon"
        android:drawableEnd="@drawable/ic_support"
        android:text="@string/support" />

    <TextView
        android:id="@+id/agreement"
        style="@style/TextStyleActivitySettingsWithIcon"
        android:drawableEnd="@drawable/ic_arrowforward"
        android:text="@string/agreement" />
</LinearLayout>
